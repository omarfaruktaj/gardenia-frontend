{
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
     "importOrder": [
        "^react$",
        "^next$",
        "^(react-native|react-dom)$",
        "<THIRD_PARTY_MODULES>",
        "^@/",
        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importOrderParserPlugins":["typescript","tsx","jsx"],
    "plugins": [
        "prettier-plugin-tailwindcss",
        "@trivago/prettier-plugin-sort-imports"
    ]
}

